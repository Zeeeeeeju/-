/* pages/main/main.wxss */
.lunbo{
  height: 400rpx;
  background-color: #fff;
  border-top: 3rpx solid #f5f5f5;
}
.swiper-image {
  width: 100%;
  height: 370rpx;
}
.selectType{
  margin-top: 20rpx;
  height: 185rpx;
  background: #fff;
}
.all{
  height: 100rpx;
  padding-left: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
}
#allCom{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
.all text{
  font-size: 40rpx;
}
/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.swiper-nav{background-color: #fff;white-space: nowrap;}
.swiper-nav .item-nav{position: relative;padding: 30rpx 32rpx;color: #999;font-size: 30rpx;cursor: pointer;display: inline-block}
.swiper-nav .active{color: #f43838}
.swiper-nav .active::after{content:'';position: absolute;left: 32rpx;right: 32rpx;height:0;border-bottom: 4rpx solid #f43838;border-radius: 4rpx;bottom: 18rpx}

.goodsList{
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between; 
  flex-flow: row wrap;
  padding: 0rpx 15rpx;
  opacity: 0;
}
.goodItem{
  display: block;
  margin-bottom: 40rpx;
  height: 520rpx;
  width: 355rpx;
  background-color: #fff;
  border-radius: 20rpx;
  /* opacity: 0.1; */
}
.goodItem image{
  width: 355rpx;
  height: 400rpx;
  border-radius: 20rpx;
}
.title{
  font-size: 32rpx;
  word-break: keep-all;
  word-wrap: break-word;
}
.t{
  height: 46rpx;
  width: 355rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 10rpx;
}
.b{
  width: 350rpx;
  height: 65rpx;
  padding-left: 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.price{
  color: #FF359A;
}
.buyBtn{
  display: flex;
  justify-content: center; 
  align-items: center;
  height: 50rpx;
  font-size: 26rpx;
  background-color: #e91e63;
  border-radius: 30rpx;
  border-color: #e91e63;
  color: #fff;
  font-weight: bold;
}