/* pages/order/order.wxss */
/*全部订单*/
.orderDetails{
	background: #fff;
	border-bottom: 20rpx solid #f3f3f3;
  margin-top: 10rpx;
}
.orderListTitle{
	height: 100rpx;
	line-height: 100rpx;
	border-bottom: 3rpx solid #f3f3f3;
}
.orderListTitle .userImg{
	float: left;
	width: 70rpx;
	height: 70rpx;
	border-radius: 35rpx;
	margin:15rpx;
}
.orderListTitle .userImg image{
	border-radius: 35rpx;
	width: 100%;
	height: 100%;
}
.orderListTitle .userName{
	padding-right: 50rpx;
	background: url(../../../images/member_list_arrow.png) no-repeat 90% center;
	background-size: 35rpx 35rpx;
}
.orderListTitle .orderStatus{
	float: right;
	margin-right: 20rpx;
	color: #2f7b27;
	font-size: 34rpx;
}
.orderListDetails{
	display: flex;
  flex-direction: column;
	/* height: 230rpx; */
	border-bottom: 3rpx solid #f3f3f3;
}
.orderListDetails .productImg{
	flex: 1;
	height: 140rpx;
	margin-top: 20rpx;
	margin-left: 20rpx;
}
.orderListDetails .productImg image{
	width: 100%;
	height: 100%;
}
.productInfo{
	flex: 4;
	padding: 20rpx 20rpx;
}
.orderListDetails .productInfo .productTitle{
	overflow: hidden;
	text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.productCount{
	height: 80rpx;
	line-height: 80rpx;
	border-bottom: 1rpx solid #f3f3f3;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.orderNum{
  padding-left: 20rpx;
  font-size: 34rpx;
}
.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 36;
  /* background: rgba(0, 0, 0, 0); */
  background: rgba(0, 0, 0, 0.4);
  display:none;
}

.zan-dialog__container {
  position: fixed;
  bottom: 400rpx;
  width: 730rpx;
  /* height: 550rpx; */
  height: 400rpx;
  margin-left: 10rpx;
  background: #f8f8f8;
  transform: translateY(300%);
  transition: all 0.4s ease;
  z-index: 37;
  border-radius: 20rpx;
  box-shadow: 0px 3px 3px 2px gainsboro;
}

.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}
.orderNumber{
  padding: 15rpx;
  text-align: center;
  font-size: 38rpx;
  border-bottom: 3rpx solid #f3f3f3;
}
.item{
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  padding: 20rpx;
  border-bottom: 4rpx solid #f3f3f3;
}
.pp{
  display: flex;
  justify-content: space-between;
}
.non_hide{
  height: 100rpx;
  text-align: center;
  font-size: 38rpx;
  padding: 20rpx;
  color: rgb(170, 156, 156);
  display: none;
}
.non_show{
  height: 100rpx;
  text-align: center;
  font-size: 38rpx;
  padding: 20rpx;
  color: rgb(170, 156, 156);
}